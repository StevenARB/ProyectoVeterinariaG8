@{
    ViewData["Title"] = "Home";
}

<div class="text-center"><h1 class="mt-5 display-1">Citas de Mascotas</h1></div>
<hr />

<div class="row">
    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                    Próximas Citas
                </button>
            </h2>
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                <div class="accordion-body">
                    @foreach (var citas in ViewBag.Proximas)
                    {
                        <div class="col-sm-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title"><strong>Fecha y Hora: </strong> @citas.FechayHora</h5>
                                    <p class="card-text"><strong>Descripcion: </strong> @citas.DescripcionCita</p>
                                    <a href="@Url.Action("Details","Citas", new { id = citas.CitaId })" class="btn btn-primary">Ver detalle</a>
                                </div>
                            </div>
                        </div>
                    }
                    @if (ViewBag.Proximas == null || ViewBag.Proximas.Count == 0)
                    {
                        <h2>No hay Citas Pendientes</h2>
                    }
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                    Historial Citas
                </button>
            </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body">
                    <div class="row">
                        @foreach (var citas in ViewBag.Historial)
                        {
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title"><strong>Fecha y Hora: </strong> @citas.FechayHora</h5>
                                        <p class="card-text"><strong>Descripcion: </strong> @citas.DescripcionCita</p>
                                        <a href="@Url.Action("Details","Citas", new { id = citas.CitaId })" class="btn btn-primary">Ver detalle</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>