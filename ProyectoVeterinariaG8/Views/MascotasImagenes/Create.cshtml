@model ProyectoVeterinariaG8.DAL.MascotaImagen

@{
    ViewData["Title"] = "Agregar Imagen";
}

<h1>Agregar Imagen de Mascota</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MascotaId" class="control-label"></label>
                <select asp-for="MascotaId" class ="form-control" asp-items="ViewBag.MascotaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label">Imagen de la Mascota</label>
                <input asp-for="Imagen" type="file" accept="image/png" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Agregar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
