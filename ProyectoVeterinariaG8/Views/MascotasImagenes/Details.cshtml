@model ProyectoVeterinariaG8.DAL.MascotaImagen

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MascotaImagen</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-12">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class = "col-sm-12 my-3">
            <div style="width: 25rem">
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Imagen))" class="d-block w-100" alt="Imagen de @Model.Mascota.Nombre"/>
            </div>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mascota)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mascota.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mascota.MascotaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mascota.MascotaId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ImagenId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
